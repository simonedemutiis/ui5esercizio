<mvc:View xmlns:core="sap.ui.core"
    controllerName="cloudapp.cloudapp.controller.Suppliers"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:m="sap.suite.ui.microchart"
      >
 <Page title="Fornitori" showNavButton="true" navButtonPress=".onNavForn">
<Panel headerText="Informazioni dei fornitori" class="sapUiResponsiveMargin" width="auto">
<IconTabBar
		id="idIconTabBarMulti"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter icon="sap-icon://hint" key="info" design="Vertical" >
            <Text text="Company Name" />
               <Text text="Company Name" />
               <Text text="Company Name" />
			</IconTabFilter>
			<IconTabFilter
				icon="sap-icon://inspection"
				key="inspection">
				<Text text="Attachments go here ..." />
			</IconTabFilter>
            
		</items>
	</IconTabBar>
    <l:HorizontalLayout>
			<m:RadialMicroChart  size="M" percentage="45" press="press" class="sapUiSmallMargin"/>
		</l:HorizontalLayout>
</Panel>
    </Page> 
</mvc:View>